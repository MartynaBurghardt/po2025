<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      spacing="10.0" alignment="TOP_LEFT">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Dodaj nowy samochód" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" prefWidth="120.0"/>
            <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0"/>
        </columnConstraints>

        <Label text="Model:" GridPane.rowIndex="0"/>
        <TextField fx:id="modelTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Nr rejestracyjny:" GridPane.rowIndex="1"/>
        <TextField fx:id="registrationTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Waga (kg):" GridPane.rowIndex="2"/>
        <TextField fx:id="weightTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Prędkość max (km/h):" GridPane.rowIndex="3"/>
        <TextField fx:id="speedTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Typ Silnika:" GridPane.rowIndex="4"/>
        <ChoiceBox fx:id="engineChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="200.0"/>

        <Label text="Typ Skrzyni:" GridPane.rowIndex="5"/>
        <ChoiceBox fx:id="gearboxChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="200.0"/>

    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
        <Button fx:id="cancelButton" text="Anuluj" onAction="#onCancelButton"/>
        <Button fx:id="confirmButton" text="Zatwierdź" onAction="#onConfirmButton"/>
    </HBox>

</VBox>